# General settings
auto-reload yes          # Automatically reload feeds
reload-time 60           # Reload feeds every 60 minutes
max-items 100            # Maximum number of items to display per feed

# UI settings
show-read-feeds no       # Hide feeds with no unread articles
browser "xdg-open %u"    # Use default browser to open links
color info default blue  # Color scheme for info messages
color listnormal white black
color listfocus white blue bold
color article white black

# Key bindings
bind-key j down
bind-key k up
bind-key l open
bind-key h quit
